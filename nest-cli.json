{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "sourceRoot": "apps/gateway/src",
      "entryFile": "index",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "auth-service": {
      "type": "application",
      "root": "apps/services/auth-service",
      "sourceRoot": "apps/services/auth-service/src",
      "entryFile": "index",
      "compilerOptions": {
        "tsConfigPath": "apps/services/auth-service/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "webpack": true
  }
}