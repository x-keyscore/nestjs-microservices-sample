{
  "monorepo": true,
  "root": "apps/main",
  "sourceRoot": "apps/main/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/main/tsconfig.app.json"
  },
  "projects": {
    "main": {
      "type": "application",
      "root": "apps/main",
      "entryFile": "main",
      "sourceRoot": "apps/main/src",
      "compilerOptions": {
        "tsConfigPath": "apps/main/tsconfig.app.json"
      }
    },
    "services/user": {
      "type": "application",
      "root": "apps/services/user",
      "entryFile": "main",
      "sourceRoot": "apps/services/user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/services/user/tsconfig.app.json"
      }
    }
  }
}