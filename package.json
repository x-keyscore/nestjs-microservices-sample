{
  "name": "server",
  "version": "0.0.1",
  "private": true,
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "build": "nest build",
    "start": "node ./concurrently.config.mjs",
    "test": "jest --config ./jest.config.mjs",
    "test:functional": "npm run test:functional --workspaces",
    "lint": "npm run lint --workspaces",
    "docker:build": "docker compose -f ./developments/docker-compose.yml -p development build",
    "docker:up": "docker compose -f ./developments/docker-compose.yml -p development up"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.0.1",
    "@nestjs/microservices": "^11.1.6",
    "@nestjs/platform-fastify": "^11.1.6",
    "nats": "^2.29.3",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "valia": "^4.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@stylistic/eslint-plugin": "^5.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "concurrently": "^9.2.1",
    "eslint": "^9.18.0",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
